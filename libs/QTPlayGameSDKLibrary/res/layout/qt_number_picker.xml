<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageButton
        android:id="@+id/qt_increment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <view
        android:id="@+id/qt_numberpicker_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="com.qtplay.gamesdk.widget.picker.QTNumberPicker$CustomEditText"
        android:background="@null"
        android:gravity="center"
        android:paddingBottom="13sp"
        android:paddingLeft="2sp"
        android:paddingRight="2sp"
        android:paddingTop="13sp"
        android:singleLine="true"
        android:textColor="@color/qt_color_text"
        android:textSize="18sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/qt_decrement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</merge>
