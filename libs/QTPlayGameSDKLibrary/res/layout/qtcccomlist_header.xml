<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:background="@color/qt_color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		android:background="@color/qt_color_white"
        android:paddingBottom="@dimen/qt_padding"
        android:paddingLeft="@dimen/qt_margin_gap"
        android:paddingRight="@dimen/qt_margin_gap"
        android:paddingTop="@dimen/qt_padding" >

        <ImageView
            android:id="@+id/qt_cc_img_face"
            android:layout_width="@dimen/qt_img_user_size"
            android:layout_height="@dimen/qt_img_user_size"
            android:layout_centerVertical="true"
            android:src="@drawable/qt_default_avatar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qt_padding"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/qt_cc_txt_name"
                style="@style/qt_style_text_normal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/qt_color_text_cc_name" />

            <TextView
                android:id="@+id/qt_cc_txt_content"
                style="@style/qt_style_text_normal2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qt_padding"
                android:singleLine="false" 
                android:autoLink="all|web"/>

            <ImageView
                android:id="@+id/qt_cc_img_pic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qt_pic_height"
                android:layout_marginTop="@dimen/qt_padding"
                android:src="@drawable/qt_default_avatar" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/qt_margin_gap" >

        <TextView
            android:id="@+id/qt_cc_txt_time"
            style="@style/qt_style_text_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/qt_cc_plate_numcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qt_padding"
            android:background="@drawable/qt_item_bg_trans"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/qt_padding"
            android:paddingRight="@dimen/qt_padding">

            <ImageView
                android:layout_width="@dimen/qt_img_icon_size"
                android:layout_height="@dimen/qt_img_icon_size"
                android:src="@drawable/qt_icon_numcomment" />

            <TextView
                android:id="@+id/qt_cc_txt_numcomment"
                style="@style/qt_style_subtext_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qt_item_padding" />
        </LinearLayout>

        <TextView
            android:id="@+id/qt_cc_txt_report"
            style="@style/qt_style_subtext_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qt_item_bg_trans"
            android:paddingLeft="@dimen/qt_padding"
            android:paddingRight="@dimen/qt_padding"
            android:text="@string/qt_string_report" />
    </LinearLayout>

</LinearLayout>