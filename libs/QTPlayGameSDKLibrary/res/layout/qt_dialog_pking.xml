<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/qt_margin_gap"
    android:paddingRight="@dimen/qt_margin_gap"
    android:background="@drawable/qt_dialog_bg_trans"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qt_margin_top"
	    android:paddingTop="@dimen/qt_margin_top"
	    android:paddingBottom="@dimen/qt_margin_top"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/qt_pk_img_face"
                android:layout_width="@dimen/qt_img_user_size"
                android:layout_height="@dimen/qt_img_user_size"
                android:minHeight="@dimen/qt_img_user_size"
                android:minWidth="@dimen/qt_img_user_size"
                android:src="@drawable/qt_default_avatar" />

            <TextView
                android:id="@+id/qt_pk_txt_cscore"
                style="@style/qt_style_text_title_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qt_img_user_size"
                android:layout_marginLeft="@dimen/qt_margin_gap"
                android:gravity="center_vertical"
                android:textSize="@dimen/qt_edit_text_title_size_big"  />
        </LinearLayout>

        <TextView
            android:id="@+id/qt_pk_txt_dscore"
            style="@style/qt_style_text_title_normal"
        	android:layout_marginTop="@dimen/qt_margin_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/qt_pk_txt_pktime"
            style="@style/qt_style_text_title_normal"
        	android:layout_marginTop="@dimen/qt_margin_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/qt_pk_tag_width"
        android:layout_height="@dimen/qt_pk_tag_height"
        android:layout_alignParentRight="true"
        android:src="@drawable/qt_icon_pk" />

</RelativeLayout>