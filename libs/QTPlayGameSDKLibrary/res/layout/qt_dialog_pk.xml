<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/qt_dialog_bg_trans"
        android:layout_margin="@dimen/qt_login_margin_size"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/qt_pk_plate_tab"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/qt_rank_tab_height"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/qt_pk_txt_showtxt"
            style="@style/qt_style_text_title_normal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        	android:layout_margin="@dimen/qt_login_margin_size"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="false"
            android:layout_weight="1" />

        <Button
            android:id="@+id/qt_pk_btn"
            style="@style/qt_style_btn_big"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/qt_edit_height"
       		android:layout_margin="@dimen/qt_login_margin_size"
            android:text="@string/qt_string_start_pk"
            android:textColor="@color/qt_color_text"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/qt_pk_close"
        android:layout_width="@dimen/qt_icon_close_size"
        android:layout_height="@dimen/qt_icon_close_size"
        android:src="@drawable/qt_icon_close" />

</RelativeLayout>