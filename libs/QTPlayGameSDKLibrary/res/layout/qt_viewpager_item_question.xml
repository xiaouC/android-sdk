<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qt_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/qt_margin_gap"
    android:paddingRight="@dimen/qt_margin_gap"
    android:paddingTop="@dimen/qt_padding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/qt_img_quser_face"
            android:layout_width="@dimen/qt_img_user_size_small"
            android:layout_height="@dimen/qt_img_user_size_small"
            android:src="@drawable/qt_default_avatar" />

        <TextView
            android:id="@+id/qt_txt_question"
            style="@style/qt_style_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qt_padding"
            android:textColor="@color/qt_color_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/qt_txt_ans"
        style="@style/qt_style_subtext_normal2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:paddingTop="@dimen/qt_padding" 
        android:lines="2"
        android:singleLine="false" />

    <include layout="@layout/qt_divider" />

    <LinearLayout
        android:id="@+id/qt_plate_ans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/qt_padding" 
    	android:layout_marginBottom="@dimen/qt_padding" 
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/qt_img_ans_face"
            android:layout_width="@dimen/qt_img_user_size_small"
            android:layout_height="@dimen/qt_img_user_size_small"
            android:src="@drawable/qt_default_avatar" />

        <TextView
            android:id="@+id/qt_txt_ans_id"
            style="@style/qt_style_subtext_normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qt_item_padding"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/qt_img_icon_size"
            android:layout_height="@dimen/qt_img_icon_size"
            android:src="@drawable/qt_icon_numans" />

        <TextView
            android:id="@+id/qt_txt_ans_num"
            style="@style/qt_style_subtext_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qt_item_padding"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>