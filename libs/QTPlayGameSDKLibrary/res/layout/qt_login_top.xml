<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qt_plate_login_topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qt_topbar_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/qt_topbar_img"
        android:layout_width="@dimen/qt_topbar_left_size"
        android:layout_height="@dimen/qt_topbar_left_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qt_margin_gap"
        android:src="@drawable/qt_main_logo" />

    <TextView
        android:id="@+id/qt_topbar_title"
        style="@style/qt_style_text_title_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qt_margin_gap"
        android:layout_toRightOf="@id/qt_topbar_img" />
    
    <ImageView
        android:id="@+id/qt_topbar_img_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qt_topbar_left_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qt_margin_gap"
        android:src="@drawable/qt_icon_top_logo" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/qt_topbar_right_txt"
        style="@style/qt_style_text_title_normal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qt_margin_gap"
        android:layout_marginRight="@dimen/qt_margin_gap"
        android:layout_toRightOf="@id/qt_topbar_title"
        android:textSize="@dimen/qt_edit_text_size2"
        android:gravity="right"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/qt_topbar_right_plate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qt_topbar_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/qt_top_bg_right"
        android:gravity="center_vertical"
        android:minWidth="@dimen/qt_topbar_right_minwidth"
        android:orientation="horizontal"
        android:visibility="gone" >

        <FrameLayout
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/qt_margin_gap"
            android:layout_marginTop="@dimen/qt_margin_gap"
            android:background="@color/qt_color_main" />

        <TextView
            android:id="@+id/qt_topbar_txt_fun"
            style="@style/qt_style_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/qt_margin_gap"
            android:paddingRight="@dimen/qt_margin_gap" />
    </LinearLayout>

</RelativeLayout>