<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qt_list_item_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/qt_item_padding" >

    <LinearLayout
        android:id="@+id/qt_plate_notice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qt_margin_gap"
        android:padding="@dimen/qt_margin_gap"
        android:background="@drawable/qt_list_item_shape_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/qt_txt_notice_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_weight="1"
            style="@style/qt_style_text_normal"/>
        <TextView
            android:id="@+id/qt_txt_notice_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qt_item_margin_top"
            android:layout_weight="1"
            style="@style/qt_style_subtext_normal"/>
        

        <ImageView
            android:id="@+id/qt_img_notice_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/qt_img_user_bg_size"
            android:minHeight="@dimen/qt_img_user_bg_size"
            android:layout_marginTop="@dimen/qt_item_margin_top"/>
         
         <TextView
            android:id="@+id/qt_txt_notice_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qt_item_margin_top"
            android:singleLine="false"
            android:maxLines="3"
            android:layout_weight="1"
            style="@style/qt_style_subtext_normal2"/>

    </LinearLayout>
    
        <TextView
            android:id="@+id/qt_txt_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qt_margin_gap"
            android:layout_marginBottom="@dimen/qt_margin_gap"
            style="@style/qt_style_subtext_normal"/>

</LinearLayout>