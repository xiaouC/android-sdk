<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/egame_resertpad_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <include
        layout="@layout/egame_user_sdk_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/egame_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/egame_alerday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已向手机"
                android:textColor="@color/dark_gray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/egame_resertpwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13838383838"
                android:textColor="@color/green"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/egame_sendtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:textColor="@color/dark_gray"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/egame_resertpwd_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="验证码错误"
            android:textColor="@color/light_red"
            android:textSize="12dp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/egame_resertcode_wll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/egame_resertcode_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/egame_input_box"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/egame_et_resert_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/egame_input_varify"
                    android:maxLength="6"
                    android:numeric="integer"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16dp" >
                </EditText>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_eagme_sent_again"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/egame_disembark_btn_verification"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="60s后重新发送"
                android:textColor="@color/regist_text"
                android:textSize="12dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/egame_inputet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-3dp"
            android:paddingRight="10dp"
            android:background="@drawable/egame_input_box" >

            <EditText
                android:id="@+id/egame_resertpwd_newpwd"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="@string/egame_input_hint_new_password"
                android:maxLength="20"
                android:padding="5dp"
                android:singleLine="true"
                android:textColorHint="@color/light_gray"
                android:textSize="16dp" />

            <Button
                android:id="@+id/egame_resertpwd_delete_input_pwd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/egame_disembark_icon_delete"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/egame_resertpwd_resert"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/egame_btn_light_green_status"
            android:enabled="false"
            android:text="重置密码并进入游戏"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>
