<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:background="@color/sdk_while"
    android:orientation="vertical" >

    <include layout="@layout/sdk_dialog_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sdk_bg_login"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/userName_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/sdk_bg_input"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/sdk_img_username" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/sdk_gray_line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入手机号或邮箱账号"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/sdk_black_text"
                    android:textColorHint="@color/sdk_gray_text"
                    android:textSize="16sp" />

                <ToggleButton
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/userName"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:button="@drawable/sdk_btn_open_arrow"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/sdk_bg_input"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_passWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/sdk_img_password" />

            <TextView
                android:id="@+id/img_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/sdk_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/passWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/forget_password"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:password="true"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColor="@color/sdk_black_text"
                    android:textColorHint="@color/sdk_gray_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:text="忘记密码？"
                    android:textColor="@color/sdk_green_light"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="190dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="49dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/sdk_green_button"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="登录"
            android:textColor="@color/sdk_while"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fast_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:text="一键注册>"
            android:textColor="@color/sdk_green_light"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>