<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="45dp"
    android:background="@drawable/pj_corner_background_above" >

    <ImageView
        android:id="@+id/pj_avatar_icon_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/pj_background_avatar"
        android:padding="1dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/pj_nick_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/pj_avatar_icon_iv"
        android:textColor="#ffffffff"
        android:textSize="14sp" >
    </TextView>

    <ImageView
        android:id="@+id/pj_setting_iv_"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/pj_background_setting" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#ffbe0115" />

</RelativeLayout>