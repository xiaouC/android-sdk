<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quick_register"
    android:layout_width="320dip"
    android:layout_height="280dip"
    android:layout_centerInParent="true"
    android:background="@drawable/sdk_login_bg"
    android:orientation="vertical"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/sdk_login_title_bg" >

        <LinearLayout
            android:id="@+id/qrg_back"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sdk_back_bg_selector"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sdk_login_icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pp_quick_register_title"
            android:textColor="@color/text_title"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/qrg_phone_number_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/sdk_login_icon_shouji" />

            <EditText
                android:id="@+id/qrg_phone_number_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/qrg_phone_number_iv"
                android:background="@drawable/sdk_login_input_bg_selector"
                android:hint="@string/pp_register_input_phone_number_hint"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/text_focused"
                android:textColorHint="@color/text_normal"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/qrg_code_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/sdk_login_icon_yzm" />

            <EditText
                android:id="@+id/qrg_code_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/qrg_code_iv"
                android:background="@drawable/sdk_login_input_bg_selector"
                android:hint="@string/pp_register_input_code_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_focused"
                android:textColorHint="@color/text_normal"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/qrg_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="10dip"
                    android:background="#ff3e4659" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:text="@string/pp_get_code"
                    android:textColor="#ff72a2f8"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/qrg_quick_register_btn"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/sdk_login_btn_green_selector"
            android:text="@string/pp_register"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/qrg_register_btn"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/sdk_login_btn_xt_selector"
            android:text="@string/pp_username_register"
            android:textColor="@color/sdk_text_selector"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>