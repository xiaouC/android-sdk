<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/wd_pay_content_bg"
        android:gravity="center_vertical"
        android:minHeight="50dp" >

        <TextView
            style="@style/wd_pay_text_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前账户:  " />

        <TextView
            android:id="@+id/wd_current_account"
            style="@style/wd_pay_text_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="md123456" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wd_pay_title_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wd_pay_content_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/wd_pay_text_yellow_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingTop="10dp"
            android:text="请选择充值方式:" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:paddingTop="4dp" >

            <TextView
                android:id="@+id/wd_telecomButton"
                style="@style/wd_pay_text_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wd_pay_telecom_bg"
                android:gravity="center"
                android:text="电信一卡付" />

            <TextView
                android:id="@+id/wd_unicomButton"
                style="@style/wd_pay_text_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wd_pay_unicom_bg"
                android:gravity="center"
                android:text="联通充值卡 " />

            <TextView
                android:id="@+id/wd_mobileButton"
                style="@style/wd_pay_text_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wd_pay_mobile_bg"
                android:gravity="center"
                android:text="移动充值卡 " />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/wd_alipayButton"
                style="@style/wd_pay_text_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wd_pay_alipay_bg"
                android:gravity="center"
                android:text="支付宝  " />

            <TextView
                android:id="@+id/wd_m915Button"
                style="@style/wd_pay_text_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wd_pay_more_bg"
                android:gravity="center"
                android:text="更多方式" />

            <TextView
                android:id="@+id/wd_jCardButton"
                style="@style/wd_pay_text_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wd_pay_jcard_bg"
                android:gravity="center"
                android:text="骏网一卡通 " />
        </RelativeLayout>
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp" >
        </LinearLayout>
