<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wd_pay_help_1_item_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/wd_icon_show"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/wd_img_desc"
        android:gravity="center_vertical" 
        android:src="@drawable/wd_pay_help_front_collapse"/>

    <TextView
        android:id="@+id/wd_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/wd_icon_show"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#916433" />

    <ImageView
        android:id="@+id/wd_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/wd_img_desc"
        android:gravity="center_vertical" 
        android:src="@drawable/wd_pay_help_behind_collapse"/>

</RelativeLayout>