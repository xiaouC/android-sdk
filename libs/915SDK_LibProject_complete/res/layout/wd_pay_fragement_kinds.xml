    <LinearLayout
        android:id="@+id/wd_pay_title_bar_layout"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/wd_pay_text_yellow_more"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#83bee3"
            android:gravity="center"
            android:text="选择充值方式"
            android:textColor="@color/wd_white"
            android:textSize="14sp" />
        <!-- android:background="@drawable/left_top" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#ebf9ff"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/wd_alipayButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="支付宝  "
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/wd_pass_horizontal_line" />

            <TextView
                android:id="@+id/wd_wechatPayButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="微信支付"
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/wd_pass_horizontal_line" />

            <TextView
                android:id="@+id/wd_mobileButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="移动充值卡 "
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/wd_telecomButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="电信充值卡"
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/wd_unicomButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="联通充值卡 "
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/wd_jCardButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="骏网一卡通 "
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/wd_upmpButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="银联支付"
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/wd_pass_horizontal_line" />

            <TextView
                android:id="@+id/wd_tencentPayButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="财付通"
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/wd_pass_horizontal_line" />

            <TextView
                android:id="@+id/wd_jdPayButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="京东支付"
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/wd_pass_horizontal_line" />

            <TextView
                android:id="@+id/wd_m915Button"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/wd_pay_kind_bg"
                android:gravity="center"
                android:text="更多方式"
                android:textColor="@color/wd_pay_kind_color"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
