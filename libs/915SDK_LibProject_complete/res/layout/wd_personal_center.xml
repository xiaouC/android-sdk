<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wd_current_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/face" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:  "
            android:textColor="#343434"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wd_current_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="md123456"
            android:textColor="#0bafe9"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wd_personal_center_changepwd_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/text"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/name" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:background="@drawable/icon_x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wd_personal_center_changepwd"
            android:textColor="#343434"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/jian" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wd_personal_center_changebindphone_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/text"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_iphone" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:background="@drawable/icon_x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wd_personal_center_bindphone"
            android:textColor="#343434"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wd_personal_center_changebindphone_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/wd_personal_center_bindphone_no"
            android:textColor="#a0a0a0"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/jian" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="7dp"
        android:text="绑定手机后可直接通过手机接收短信验证码进行密码找回，保障账号安全"
        android:textColor="#a0a0a0"
        android:textSize="12sp" />

    <Button
        android:id="@+id/wd_personal_center_change_account"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_determine"
        android:gravity="center"
        android:text="安全退出"
        android:textColor="@color/wd_white"
        android:textSize="18sp" 
        android:visibility="gone"/>

</LinearLayout>