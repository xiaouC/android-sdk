<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include 
          android:id="@+id/wd_new_login_title"
        layout="@layout/wd_new_title"/>
    
    <TextView
        android:id="@+id/wd_new_bind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wd_new_login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:text="您好,XXX,绑定手机号码保障账户安全"
        android:textColor="#04a2f1"
        android:textSize="15sp" />
    
    <LinearLayout
        android:id="@+id/wd_new_bind_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wd_new_bind_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <ImageView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/wd_new_icon_phone" />

        <EditText
            android:id="@+id/wd_new_bind_phonenumber_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/wd_new_textbackground"
            android:hint="请输入手机号码"
            android:textColorHint="#a5a5a5"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp"
             />

        <Button
            android:id="@+id/wd_new_bind_phonenumber_button"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:background="@drawable/wd_new_loginregisterselector"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wd_new_bind_checknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wd_new_bind_phonenumber"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <ImageView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/wd_new_icon_code" />

        <EditText
            android:id="@+id/wd_new_bind_checknumber_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/wd_new_textbackground"
            android:hint="请输入短息验证码"
             android:textColorHint="#a5a5a5"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/wd_new_bind_checknumber_button"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:background="@drawable/wd_new_loginselector"
            android:text="立即绑定手机"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>