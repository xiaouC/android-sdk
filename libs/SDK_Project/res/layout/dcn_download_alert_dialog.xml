<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dcn_login_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="8dip" >

        <TextView
            android:id="@+id/dcn_download_tv_tilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dcn_init_upgrade_title"
            android:textColor="@color/dcn_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dcn_download_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dcn_download_tv_tilte"
            android:layout_marginBottom="4dip"
            android:singleLine="true"
            android:textColor="#acacac"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dcn_download_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dcn_download_tv_size"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:textColor="#acacac"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dcn_download_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcn_download_tv_size"
            android:textColor="#464646"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dcn_color_login_box_gb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dcn_download_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dcn_dialog_button_bg"
            android:text="@android:string/cancel"
            android:textColor="@color/dcn_select_account_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/dcn_color_login_box_gb" />

        <Button
            android:id="@+id/dcn_download_btn_ok"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dcn_dialog_button_bg"
            android:text="@string/dcn_init_upgrade_ok"
            android:textColor="@color/dcn_select_account_blue"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>