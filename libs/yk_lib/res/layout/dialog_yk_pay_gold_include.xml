<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/yk_pay_gold_content_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/YK_GameSDK_24PX" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/yk_pay_gold_balance_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/yk_pay_gold_balance_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yk_text_0.0"
                    android:textColor="#b3b3b3"
                    android:textSize="@dimen/YK_GameSDK_58PX" />

                <TextView
                    android:id="@+id/yk_pay_gold_balance_tip_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yk_text_jbye"
                    android:textColor="#717171"
                    android:textSize="@dimen/YK_GameSDK_26PX" />

                <TextView
                    android:id="@+id/yk_pay_gold_balance_renew_txt"
                    android:layout_width="@dimen/YK_GameSDK_132PX"
                    android:layout_height="@dimen/YK_GameSDK_44PX"
                    android:background="#a0a0a0"
                    android:gravity="center"
                    android:text="@string/yk_text_sxje"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/YK_GameSDK_26PX" />
            </LinearLayout>

			<TextView
                android:id="@+id/yk_pay_gold_to_chongzhi_txt"
                android:layout_width="@dimen/YK_GameSDK_236PX"
                android:layout_height="@dimen/YK_GameSDK_88PX"
                android:layout_alignBottom="@+id/yk_pay_gold_balance_layout"
                android:layout_alignParentRight="true"
                android:background="#ff9c00"
                android:gravity="center"
                android:text="@string/yk_text_czjb"
                android:textColor="@android:color/white"
                android:textSize="@dimen/YK_GameSDK_36PX" />
			<TextView android:id="@+id/yk_pay_jinbitihuan_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/yk_text_jinbitihuan_tip"
                android:textColor="#ff9c00"
                android:textSize="@dimen/YK_GameSDK_22PX"
                android:layout_below="@+id/yk_pay_gold_to_chongzhi_txt"
                android:layout_marginTop="@dimen/YK_GameSDK_60PX"/>
			<ImageView
                android:id="@+id/yk_pay_paylist_vertical_cut"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/yk_pay_jinbitihuan_tip"
                android:layout_marginTop="@dimen/YK_GameSDK_10PX"
                android:background="#c1c1c1" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>