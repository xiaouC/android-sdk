<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/yk_white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="#bcbcbc"/>

    <RelativeLayout
        android:id="@+id/yk_pay_detail_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/YK_GameSDK_138PX"
        android:orientation="horizontal"
        android:padding="@dimen/YK_GameSDK_36PX" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/item_lastdate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yk_text_ykgame_pay"
                    android:textColor="#909090"
                    android:textSize="@dimen/YK_GameSDK_22PX"
                    android:layout_alignParentTop="true"/>
                
                <TextView   android:id="@+id/item_vipcode_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yk_text_ykgame_pay"
                    android:textColor="#666666"
                    android:textSize="@dimen/YK_GameSDK_26PX" 
                    android:layout_alignParentBottom="true"
                    />
        </RelativeLayout>
        
        
        <ImageView android:id="@+id/item_copy_img"
            android:layout_width="@dimen/YK_GameSDK_100PX"
            android:layout_height="@dimen/YK_GameSDK_50PX"
            android:background="@drawable/yk_btn_code_selector"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</LinearLayout>