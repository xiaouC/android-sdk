<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/YK_GameSDK_552PX"
    android:layout_height="300dp"
    android:background="@color/yk_ykbgColor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/YK_GameSDK_552PX"
        android:layout_height="@dimen/YK_GameSDK_52PX"
        android:layout_marginBottom="@dimen/YK_GameSDK_24PX"
        android:layout_marginTop="@dimen/YK_GameSDK_24PX"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/yk_ykbgColor"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/yk_text_version_title"
            android:textColor="@color/yk_text_title"
            android:textSize="@dimen/YK_GameSDK_32PX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/yk_title_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/YK_GameSDK_36PX"
        android:layout_marginRight="@dimen/YK_GameSDK_36PX"
        android:layout_marginTop="@dimen/YK_GameSDK_32PX"
        android:background="@color/yk_bg_color_blue" >

        <ProgressBar
            android:id="@+id/down_pb"
            style="@style/ProgressBar_horizontal_yk"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/YK_GameSDK_50PX"
            android:layout_margin="1dp"
            android:max="100" >
        </ProgressBar>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/YK_GameSDK_70PX"
        android:layout_marginLeft="@dimen/YK_GameSDK_36PX"
        android:layout_marginRight="@dimen/YK_GameSDK_36PX"
        android:layout_marginTop="@dimen/YK_GameSDK_30PX" >

        <TextView
            android:id="@+id/tv_loadingsize"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:textColor="@color/yk_text_title" />

        <TextView
            android:id="@+id/tv_allsize"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/tv_loadingsize"
            android:text="@string/yk_text_zzxz" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="@string/yk_text_bf0"
            android:textColor="@color/yk_text_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/yk_title_line_bellow" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/YK_GameSDK_94PX"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/yk_btn_white_selector"
            android:text="@string/yk_text_btn_qx"
            android:textColor="@color/yk_loading_btn_cancel"
            android:textSize="@dimen/YK_GameSDK_32PX" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/yk_title_line_bellow" >
        </LinearLayout>

        <Button
            android:id="@+id/btn_install"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/yk_btn_light_blue_selector"
            android:text="@string/yk_text_btn_anzhuang"
            android:textColor="@color/yk_loading_btn_cancel"
            android:textSize="@dimen/YK_GameSDK_32PX"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>