<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/YK_GameSDK_590PX"
    android:layout_height="fill_parent"
    android:background="@color/yk_ykbgColor"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_title"
        android:layout_width="@dimen/YK_GameSDK_590PX"
        android:layout_height="wrap_content"
        android:background="@color/yk_ykbgColor"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_loading_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/YK_GameSDK_110PX"
            android:layout_gravity="center_horizontal"
            android:background="@color/yk_ykbgColor"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/yk_text_title"
            android:textSize="@dimen/YK_GameSDK_32PX" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/yk_title_line" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/YK_GameSDK_590PX"
        android:layout_height="@dimen/YK_GameSDK_200PX"
        android:background="@color/yk_ykbgColor"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/loadingImageView"
            android:layout_width="@dimen/YK_GameSDK_80PX"
            android:layout_height="@dimen/YK_GameSDK_80PX"
            android:layout_marginLeft="@dimen/YK_GameSDK_80PX"
            android:background="@anim/progress_round" />

        <TextView
            android:id="@+id/tv_loadingmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@color/yk_ykbgColor"
            android:gravity="center_vertical"
            android:textColor="@color/yk_loading_bar_text"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>