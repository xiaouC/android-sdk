<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nanlus="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/YK_GameSDK_552PX"
    android:layout_height="300dp"
    android:background="@color/yk_ykbgColor"
    android:orientation="vertical" >

    <include layout="@layout/yk_title_include" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/yk_title_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/yk_tv_error_include" />

        <com.youku.gamesdk.widget.EditTextWithErr
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/YK_GameSDK_36PX"
            android:layout_marginRight="@dimen/YK_GameSDK_36PX"
            android:layout_marginTop="@dimen/YK_GameSDK_36PX"
            android:contentDescription="@string/yk_text_hint_yyzczh"
            android:tag="phone#11" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/YK_GameSDK_88PX"
        android:layout_marginLeft="@dimen/YK_GameSDK_36PX"
        android:layout_marginRight="@dimen/YK_GameSDK_36PX"
        android:layout_marginTop="@dimen/YK_GameSDK_46PX"
        android:background="@drawable/yk_btn_blue_selector"
        android:text="@string/yk_btn_text_yzsf_1"
        android:textColor="@color/yk_btn_text_white"
        android:textSize="@dimen/YK_GameSDK_32PX" />
    
    <TextView
        android:id="@+id/no_nameregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/YK_GameSDK_36PX"
    	android:layout_marginTop="@dimen/YK_GameSDK_32PX"
        android:text="@string/yk_text_notice"
        android:textColor="@color/yk_edit_text_hint"
        android:textSize="@dimen/YK_GameSDK_24PX"
         />
    
    
    <RelativeLayout
        android:id="@+id/have_nameregister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/YK_GameSDK_36PX"
        android:layout_marginTop="@dimen/YK_GameSDK_32PX"
        android:orientation="horizontal" 
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_hink_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_hink"
            android:layout_toRightOf="@id/img_hink"
            android:gravity="center_vertical"
            android:text="@string/yk_text_nykyy"
            android:textColor="@color/yk_edit_text_hint"
            android:textSize="@dimen/YK_GameSDK_24PX" />

        <TextView
            android:id="@+id/tv_reg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_hink"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tv_hink_info"
            android:gravity="center_vertical"
            android:text="@string/yk_text_a_yhmzc"
            android:textColor="#22b8ff"
            android:textSize="@dimen/YK_GameSDK_24PX" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/YK_GameSDK_32PX"
        android:background="@color/yk_title_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/yk_ykbgColor"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_other_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/YK_GameSDK_110PX"
            android:background="@drawable/yk_btn_white_selector"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/yk_text_btn_yk_user_login"
            android:textColor="@color/yk_button_text"
            android:textSize="@dimen/YK_GameSDK_26PX" />
    </LinearLayout>

</LinearLayout>