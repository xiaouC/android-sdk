<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/yk_ykbgColor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/YK_GameSDK_552PX"
        android:layout_height="@dimen/YK_GameSDK_52PX"
        android:layout_marginBottom="@dimen/YK_GameSDK_24PX"
        android:layout_marginLeft="@dimen/YK_GameSDK_20PX"
        android:layout_marginRight="@dimen/YK_GameSDK_20PX"
        android:layout_marginTop="@dimen/YK_GameSDK_24PX"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/yk_ykbgColor"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/yk_text_version_title"
            android:textColor="@color/yk_text_title"
            android:textSize="@dimen/YK_GameSDK_32PX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/yk_title_line" >
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/YK_GameSDK_200PX"
        android:layout_marginBottom="@dimen/YK_GameSDK_22PX"
        android:layout_marginLeft="@dimen/YK_GameSDK_48PX"
        android:layout_marginRight="@dimen/YK_GameSDK_48PX"
        android:layout_marginTop="@dimen/YK_GameSDK_22PX"
        android:background="@color/yk_ykbgColor" >

        <TextView
            android:id="@+id/tv_update_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yk_ykbgColor"
            android:gravity="center_vertical"
            android:textColor="@color/yk_loading_btn_cancel"
            android:textSize="@dimen/YK_GameSDK_26PX" />
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/yk_title_line_bellow" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/YK_GameSDK_94PX"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/yk_btn_white_selector"
            android:text="@string/yk_text_btn_qx"
            android:textColor="@color/yk_loading_btn_cancel"
            android:textSize="@dimen/YK_GameSDK_32PX" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/yk_title_line_bellow" >
        </LinearLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/yk_btn_light_blue_selector"
            android:text="@string/yk_text_btn_gx"
            android:textColor="@color/yk_loading_btn_cancel"
            android:textSize="@dimen/YK_GameSDK_32PX" />
    </LinearLayout>

</LinearLayout>