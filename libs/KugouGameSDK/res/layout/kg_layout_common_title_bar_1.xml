<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/kg_common_blue_kugou"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/kg_common_btn_back"
        android:layout_width="50dp"
        android:padding="15dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:contentDescription="@string/kg_app_name"
        android:background="@drawable/kg_back_button_selector_1"
        android:src="@drawable/kg_common_title_go_back_logo" />

    <TextView
        android:id="@+id/kg_common_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/kg_kugou_game"
        android:textColor="@color/kg_common_white"
        android:textSize="@dimen/kg_common_larger" />

</RelativeLayout>