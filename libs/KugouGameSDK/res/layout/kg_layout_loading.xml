<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:minHeight="@dimen/kg_common_item_height"
    android:orientation="vertical" >

    <com.kugou.game.sdk.ui.widget.CustomProgressBar
        android:id="@+id/kg_progress_loading_bar"
        android:src="@drawable/kg_loading_medium_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/kg_loading_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kg_ohter_selector_btn_common"
        android:padding="10dip"
        android:text="@string/kg_loading"
        android:textColor="@color/kg_common_gray_darker"
        android:textSize="@dimen/kg_common_small" />

</LinearLayout>