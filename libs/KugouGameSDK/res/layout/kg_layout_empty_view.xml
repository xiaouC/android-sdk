<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_empty_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_of_empty"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/kg_favor_no_result_image" />

    <TextView
        android:id="@+id/tv_of_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/kg_no_data"
        android:textColor="@color/kg_common_gray_darker"
        android:textSize="@dimen/kg_common_large" />

    <Button
        android:id="@+id/btn_of_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/kg_selector_app_btn"
        android:visibility="gone"
        android:minHeight="40dp"
        android:minWidth="120dp"
        android:textColor="@color/kg_common_white"
        android:textSize="@dimen/kg_common_large" />

</LinearLayout>