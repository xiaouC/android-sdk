<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kg_recommend_user_name_tips"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg_recommend_register_username"
            android:textColor="#999999"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/kg_recommend_username_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:divider="#ffffffff" >
        </ListView>
    </LinearLayout>

    <ImageView
        android:id="@+id/kg_close_popup_window"
        android:layout_width="37dip"
        android:layout_height="46dip"
        android:layout_gravity="right" />

</FrameLayout>